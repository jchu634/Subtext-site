---
import { Image } from "astro:assets";
import background from "../assets/background.svg";
import ScreenshotDarkLarge from "@/assets/ScreenshotDarkLarge.png";
import ScreenshotLightLarge from "@/assets/ScreenshotLightLarge.png";
import Github from "@/assets/github.svg";
import { RotaryText } from "@/components/HomepageRotaryText";
import { motion } from "motion/react";

const previewURL = new URL("/subtext", Astro.url);
---

<div class="flex h-full pt-20 px-8 md:px-13 2xl:px-20 font-sans">
  <Image
    src={background}
    class="fixed inset-0 w-full h-full -z-10 blur-[100px]"
    alt="background"
    fetchpriority="high"
  />
  <main class="flex w-full pt-20 gap-8">
    <section class="flex-col h-full w-full lg:w-1/2 xl:w-[45%]">
      <section class="w-fit">
        <h1 class="text-[60px] font-lexend">Subtext</h1>

        <RotaryText client:load />
      </section>

      <section class="flex gap-4 flex-wrap pt-5 font-funnel pl-1 w-fit">
        <motion.a
          client:load
          whileHover={{ scale: 1.05 }}
          className="flex items-center px-3 py-2.5 text-white rounded-lg bg-gradient-to-r from-[#3245ff] to-[#bc52ee] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.12),inset_0_-2px_0_rgba(0,0,0,0.24)] hover:shadow-none hover:text-gray-100 transition-colors font-semibold"
          href="https://github.com/jchu634/Subtext-app/releases/latest/download/Subtext-Setup.exe"
          >Download Now</motion.a
        >
        <motion.a
          client:load
          whileHover={{ scale: 1.05 }}
          className="flex items-center px-3 py-2.5 bg-gray-300 text-gray-900 hover:text-gray-600 transition-colors rounded-lg gap-x-2"
          href="https://github.com/jchu634/Subtext-app"
        >
          <p>Github Repo</p>

          <Github size="30" />
        </motion.a>
      </section>
    </section>
    <section class="w-1/2 xl:w-[55%] items-center hidden lg:block">
      <motion.div
        className="2xl:hidden block"
        client:load
        whileHover={{ scale: 1.05 }}
      >
        <Image
          src={ScreenshotLightLarge}
          alt="A screenshot of the subtext application"
          class="dark:hidden block w-full relative"
        />
        <Image
          src={ScreenshotDarkLarge}
          alt="A screenshot of the subtext application"
          class="dark:block hidden w-full relative"
        />
      </motion.div>
      <iframe
        src={previewURL.toString()}
        class="w-full h-4/5 border-none hidden 2xl:block"
        title="Subtext UI Demo"
      >
      </iframe>
    </section>
  </main>
</div>
